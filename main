
#Holiday Class
class Holiday:

    def __init__(self, name, date ):
        print("Initializing a Holiday")
        self.name = name
        self.date = date

        @property
        def name(self):
            return self.__name
     
        @name.setter
        def name(self, new_name):
            self.__name = new_name

        @property 
        def date(self):
            return self.__date

        @date.setter
        def date(self, new_date):
            self.__date = new_date


newyears = Holiday("new years", "01-01-2022")

x = newyears.name()
print(x)


